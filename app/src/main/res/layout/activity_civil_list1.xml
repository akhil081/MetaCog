<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back"
    android:scaleType="centerCrop"
    android:gravity="center_vertical"
    tools:context="com.metacog.pc.metacog2k18.civil_list1">

    <br.com.bloder.magic.view.MagicButton
        android:id="@+id/build"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:magic_button_size="50dp"
        app:button_icon="@drawable/building_blocks"
        app:button_icon_width="38dp"
        app:button_icon_height="40dp"

        app:hide_text="\t BUILDING BLOCK"

        app:icon_button_color="#ff210d"
        app:expandable_area_color="#ec5a11"/>

    <br.com.bloder.magic.view.MagicButton
        android:id="@+id/tech"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:magic_button_size="50dp"
        android:layout_margin="10dp"
        app:button_icon="@drawable/techd"
        app:button_icon_width="25dp"
        app:button_icon_height="40dp"

        app:hide_text="\t TECH DESIGNER"

        app:icon_button_color="#effaef19"
        app:expandable_area_color="#a6a419"/>
    <br.com.bloder.magic.view.MagicButton
        android:id="@+id/stick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:magic_button_size="50dp"
        android:layout_margin="10dp"
        app:button_icon="@drawable/stick_building"
        app:button_icon_width="38dp"
        app:button_icon_height="40dp"

        app:hide_text="\t STICK BUILD"

        app:icon_button_color="#76e917"
        app:expandable_area_color="#25ae34"/>

</LinearLayout>
