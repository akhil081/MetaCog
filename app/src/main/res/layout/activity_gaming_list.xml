        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:magic_button_size="50dp"
        app:button_icon="@drawable/rubi"
        app:button_icon_width="38dp"
        app:button_icon_height="40dp"

        app:hide_text="\t RUBIK'S CUBE"

        app:icon_button_color="#76e917"
        app:expandable_area_color="#25ae34"/>
    <br.com.bloder.magic.view.MagicButton
        android:id="@+id/counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:magic_button_size="50dp"
        android:layout_margin="10dp"
        app:button_icon="@drawable/cs"
        app:button_icon_width="38dp"
        app:button_icon_height="40dp"

        app:hide_text="\t COUNTER STRIKE"

        app:icon_button_color="#effaef19"
