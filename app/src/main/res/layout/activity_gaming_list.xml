        android:id="@+id/exqu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:magic_button_size="50dp"
        android:layout_margin="10dp"
        app:button_icon="@drawable/quiz_me"
        app:button_icon_width="38dp"
        app:button_icon_height="40dp"

        app:hide_text="\t EX-QUIZ ME"

